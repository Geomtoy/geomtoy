{
    "name": "root",
    "private": true,
    "license": "MIT",
    "scripts": {
        "commit": "git-cz",
        "prepare": "husky install",
        "build-util": "cd packages/util && npm run bundle-js && npm run bundle-dts",
        "build-core": "cd packages/core && npm run bundle-js && npm run bundle-dts",
        "build-view": "cd packages/view && npm run bundle-js && npm run bundle-dts",
        "build-geomtoy": "cd bundle/geomtoy && npm run bundle-js && npm run bundle-dts",
        "build-all": "npm run build-util && npm run build-core && npm run build-view && npm run build-geomtoy",
        "version": "lerna version --no-private --conventional-commits --no-changelog --no-push",
        "publish-git": "lerna publish from-git",
        "publish-package": "lerna publish from-package"
    },
    "config": {
        "scope": "@geomtoy",
        "packages": {
            "core": {
                "scopedName": "@geomtoy/core",
                "pascalName": "Geomtoy.core"
            },
            "util": {
                "scopedName": "@geomtoy/util",
                "pascalName": "Geomtoy.util"
            },
            "view": {
                "scopedName": "@geomtoy/view",
                "pascalName": "Geomtoy.view"
            }
        }
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/plugin-proposal-decorators": "^7.16.7",
        "@babel/preset-env": "^7.16.7",
        "@babel/preset-typescript": "^7.16.7",
        "@commitlint/cli": "^16.0.2",
        "@commitlint/config-conventional": "^16.0.0",
        "@commitlint/config-lerna-scopes": "^16.0.0",
        "@commitlint/cz-commitlint": "^16.0.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-html": "^0.2.4",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^13.1.2",
        "@rollup/pluginutils": "^4.2.1",
        "@types/chai": "^4.3.0",
        "@types/mocha": "^9.0.0",
        "@types/pixelmatch": "^5.2.4",
        "babel-plugin-istanbul": "^6.1.1",
        "chai": "^4.3.4",
        "commitizen": "^4.2.4",
        "dts-bundle-generator": "^7.2.0",
        "html-to-image": "^1.9.0",
        "husky": "^7.0.4",
        "karma": "^6.3.14",
        "karma-chai": "^0.1.0",
        "karma-chrome-launcher": "^3.1.0",
        "karma-cli": "^2.0.0",
        "karma-coverage": "^2.1.0",
        "karma-mocha": "^2.0.1",
        "karma-rollup-preprocessor": "^7.0.7",
        "lerna": "^4.0.0",
        "mocha": "^9.1.4",
        "pixelmatch": "^5.2.1",
        "prettier": "^2.5.1",
        "pretty-quick": "^3.1.3",
        "rollup": "^2.63.0",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-delete": "^2.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "typescript": "^4.8.4"
    }
}
