{
    "name": "geomtoy",
    "version": "0.0.2",
    "description": "A 2D geometry responsive computing, visualizing and interacting library.",
    "main": "dist/geomtoy.umd.js",
    "scripts": {
        "test": "jest",
        "doc": "node ./typedoc.js",
        "build": "npm run bundle-js && npm run emit-dts && npm run bundle-dts",
        "serve": "rollup --config --watch",
        "check": "tsc --watch",
        "emit-dts": "tsc --project tsconfig.emit-dts.json",
        "bundle-dts": "rollup --config --environment TASK:bundle-dts",
        "bundle-js": "rollup --config --environment TASK:bundle-js"
    },
    "files": [
        "/dist"
    ],
    "author": "Fish Eleven",
    "homepage": "https://github.com/mog1347/geomtoy.git/#README",
    "repository": {
        "type": "git",
        "url": "https://github.com/mog1347/geomtoy.git"
    },
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/plugin-proposal-decorators": "^7.14.5",
        "@babel/preset-env": "^7.14.7",
        "@babel/preset-typescript": "^7.15.0",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-html": "^0.2.3",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "jest": "^27.0.6",
        "katex": "^0.13.16",
        "rollup": "^2.56.3",
        "rollup-plugin-dts": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-terser": "^7.0.2",
        "typedoc": "^0.21.9",
        "typescript": "^4.4.2"
    }
}
